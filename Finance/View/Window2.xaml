<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      
        xmlns:vm1="Finance.ViewModel"
        xmlns:local="clr-namespace:Finance"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
         xmlns:vm2="clr-namespace:Finance.ViewModel" x:Class="Finance.Window2"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <!--<ColumnDefinition Width="200"/>-->
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TabControl x:Name="TabControl" TabStripPlacement="Left" HorizontalAlignment="Stretch" Height="417" Margin="0,0,-0.4,0">
                <TabItem Header="Доходы" x:Name="IncomeTab" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <DataGrid Grid.Row="1" DataContext="{Binding IncomeSource }">
                            <!--<DataGrid.Columns>
                                <DataGridComboBoxColumn Header="Источник" Width="1*"/>
                                <DataGridTextColumn Header="Сумма" Width="1*"/>
                                <DataGridTextColumn Header="Дата" Width="1*"/>
                            </DataGrid.Columns>-->
                            

                        </DataGrid>
                    </Grid>
                </TabItem>
                <TabItem Header="Расходы" DataContext= "{Binding expensesContext}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <DataGrid ItemsSource="{Binding ExpensesSourse}" Grid.Row="1">
                            <!--<DataGrid.Columns>
                                <DataGridComboBoxColumn Header="Категория" Width="1*"/>
                                <DataGridTextColumn Header="Сумма" Width="1*"/>
                                <DataGridTextColumn Header="Дата" Width="1*"/>
                            </DataGrid.Columns>-->
                        </DataGrid>
                    </Grid>
                </TabItem>
                <TabItem Header="План"/>
                <TabItem Header="Бюджет"/>
                <TabItem Header="Справка"/>
                <TabItem Header="О программе"/>

            </TabControl>
        </StackPanel>
    </Grid>
</Window>

<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      
        xmlns:vm1="Finance.ViewModel"
        xmlns:local="clr-namespace:Finance"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
         xmlns:vm2="clr-namespace:Finance.ViewModel" x:Class="Finance.Window2"
        mc:Ignorable="d"
        Title="Home Finance" MinHeight="450" MinWidth="800" WindowState="Maximized"
     >

    <Grid>
        <Grid.ColumnDefinitions>
            <!--<ColumnDefinition Width="200"/>-->
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TabControl x:Name="TabControl" TabStripPlacement="Left" HorizontalAlignment="Stretch" MinHeight="417" Margin="0,0,-0.4,0">
                <TabItem Header="Доходы" x:Name="IncomeTab" DataContext="{Binding Path=IncomesTabItemVM}">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <ListView Grid.Row="1" ItemsSource="{Binding Path = IncomeSource, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding Path=SelectedIncome, UpdateSourceTrigger=PropertyChanged}">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="ToolTipService.ToolTip">
                                        <Setter.Value>
                                            <ToolTip Background="SkyBlue">
                                                <TextBlock Text="{Binding Path=Sum}"/>
                                            </ToolTip>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Background" Value="LightBlue"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.View>
                                <GridView x:Name="IncomeGridView">
                                    <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding Path = Date, StringFormat=d}"/>
                                    <GridViewColumn Header="Категория" DisplayMemberBinding="{Binding Path = Source_of_income.Name}"/>
                                    <GridViewColumn Header="Сумма" DisplayMemberBinding="{Binding Path=Sum}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <DataGrid Grid.Row="2" ItemsSource="{Binding IncomeSource }">
                            <!--<DataGrid.Columns>
                                <DataGridComboBoxColumn Header="Источник" Width="1*"/>
                                <DataGridTextColumn Header="Сумма" Width="1*"/>
                                <DataGridTextColumn Header="Дата" Width="1*"/>
                            </DataGrid.Columns>-->
                            

                        </DataGrid>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="5">
                            <Button Content="ADD" Command="{Binding Path=AddIncomeCommand}"/>
                            <Button Content="UPD" Command="{Binding Path=UpdateIncomeCommand}"/>
                            <Button Content="DEL" Command="{Binding Path=DeleteIncomeCommand}"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem x:Name="ExpensesTab" Header="Расходы"  DataContext="{Binding Path=ExpensesTabItemVM}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <DataGrid ItemsSource="{Binding Path = ExpensesSource, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding Path=SelectedExpenses, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1">
                       
                        </DataGrid>
                    </Grid>
                </TabItem>
                <TabItem Header="План" x:Name="PlanTab"/>
                <TabItem Header="Бюджет" x:Name="BugetTab"/>
                <TabItem Header="Справка" x:Name="HelpTab"/>
                <TabItem Header="О программе" x:Name="AboutTab"/>

            </TabControl>
        </StackPanel>
    </Grid>
</Window>

<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      
        xmlns:vm1="Finance.ViewModel"
        xmlns:local="clr-namespace:Finance"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
         xmlns:vm2="clr-namespace:Finance.ViewModel" x:Class="Finance.Window2"
        mc:Ignorable="d"
        Title="Home Finance" MinHeight="450" MinWidth="800" WindowState="Maximized"
     >

    <Grid>
        <Grid.ColumnDefinitions>
           
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TabControl x:Name="TabControl" TabStripPlacement="Left" HorizontalAlignment="Stretch" MinHeight="500" Margin="0,0,0,0">
                <TabItem Header="Доходы" x:Name="IncomeTab" DataContext="{Binding Path=IncomesTabItemVM}">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"></RowDefinition>
                            <RowDefinition Height="2*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <ListView Grid.Row="1" ItemsSource="{Binding Path = IncomeSource, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding Path=SelectedIncome, UpdateSourceTrigger=PropertyChanged}">
                            <ListView.ItemContainerStyle >
                                <Style TargetType="ListViewItem">
                                    <Setter Property="ToolTipService.ToolTip">
                                        <Setter.Value>
                                            <ToolTip Background="SkyBlue">
                                                <TextBlock Text="{Binding Path=Sum}"/>
                                            </ToolTip>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Background" Value="LightBlue"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.View>
                                <GridView x:Name="IncomeGridView">
                                    <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding Path = Date, StringFormat=d}"/>
                                    <GridViewColumn Header="Источник" DisplayMemberBinding="{Binding Path = Source_of_income.Name}"/>
                                    <GridViewColumn Header="Сумма" DisplayMemberBinding="{Binding Path=Sum}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>


                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Дата" Grid.Column="0" Grid.Row="0" Margin="5,5,2,5"/>
                            <DatePicker Grid.Column="1" Grid.Row="0" Margin="2,5,5,5" DisplayDateStart="1/1/2016" SelectedDate="{Binding Path=CurrentIncome.Date, Mode=TwoWay}"/>


                            <TextBlock Text="Сумма" Grid.Column="0" Grid.Row="1" Margin="5,5,2,5"/>
                            <TextBox Grid.Column="1" Grid.Row="1"  Margin="2,5,5,5" Text="{Binding Path=CurrentIncome.Sum, Mode=TwoWay}"/>


                            <TextBlock Text="Источник" Grid.Column="0" Grid.Row="2" Margin="5,5,2,5"/>
                            <ComboBox Grid.Column="1" Grid.Row="2"  Margin="2,5,5,5" ItemsSource="{Binding Path=IncomeSourceList}" SelectedItem="{Binding Path=CurrentIncome.Source_of_income}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=Name}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>




                            <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Height="auto" HorizontalAlignment="Center">
                                <Button Content="Применить" Background="White" Height="auto" Margin="5" HorizontalAlignment="Center"  Command="{Binding Path=ApplyChangesCommand}" IsCancel="True"/>
                                <Button Content="Отмена" Background="White" Height="auto" Margin="5" HorizontalAlignment="Center"  IsCancel="True"/>
                            </StackPanel>

                        </Grid>


                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="5">
                            <Button Content="ADD" Command="{Binding Path=AddIncomeCommand}"/>
                            <Button Content="UPD" Command="{Binding Path=UpdateIncomeCommand}"/>
                            <Button Content="DEL" Command="{Binding Path=DeleteIncomeCommand}"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem x:Name="ExpensesTab" Header="Расходы"  DataContext="{Binding Path=ExpensesTabItemVM}">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"></RowDefinition>
                            <RowDefinition Height="2*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <ListView Grid.Row="1" ItemsSource="{Binding Path = ExpensesSource, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding Path=SelectedExpenses, UpdateSourceTrigger=PropertyChanged}">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="ToolTipService.ToolTip">
                                        <Setter.Value>
                                            <ToolTip Background="SkyBlue">
                                                <TextBlock Text="{Binding Path=Sum}"/>
                                            </ToolTip>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Background" Value="LightBlue"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.View>
                                <GridView x:Name="ExpensesGridView">
                                    <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding Path=Name}"/>
                                    <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding Path = Date, StringFormat=d}"/>
                                    <GridViewColumn Header="Категория" DisplayMemberBinding="{Binding Path = Category.Category_name}"/>
                                    <GridViewColumn Header="Сумма" DisplayMemberBinding="{Binding Path=Sum}"/>
                                    <GridViewColumn Header="Важность" DisplayMemberBinding="{Binding Path=Necessity1.Name}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Grid Grid.Row="2">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Название" Grid.Column="0" Grid.Row="0" Margin="5,5,2,5"/>
                            <TextBox Grid.Column="1" Grid.Row="0"  Margin="2,5,5,5" Text="{Binding Path=CurrentExpenses.Name, Mode=TwoWay}"/>


                            <TextBlock Text="Дата" Grid.Column="0" Grid.Row="1" Margin="5,5,2,5"/>
                            <DatePicker Grid.Column="1" Grid.Row="1" Margin="2,5,5,5" DisplayDateStart="1/1/2016" SelectedDate="{Binding Path=CurrentExpenses.Date, Mode=TwoWay}"/>


                            <TextBlock Text="Сумма" Grid.Column="0" Grid.Row="2" Margin="5,5,2,5"/>
                            <TextBox Grid.Column="1" Grid.Row="2"  Margin="2,5,5,5" Text="{Binding Path=CurrentExpenses.Sum, Mode=TwoWay}"/>

                            <TextBlock Text="Важность" Grid.Column="0" Grid.Row="3" Margin="5,5,2,5"/>
                            <ComboBox Grid.Column="1" Grid.Row="3" Margin="2,5,5,5" ItemsSource="{Binding Path=ExpensesSourceList}" SelectedItem="{Binding Path=CurrentExpenses.Necessity1}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=Necessity}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <TextBlock Text="Источник" Grid.Column="0" Grid.Row="4" Margin="5,5,2,5"/>
                            <ComboBox Grid.Column="1" Grid.Row="4"  Margin="2,5,5,5" ItemsSource="{Binding Path=ExpensesSourceList}" SelectedItem="{Binding Path=CurrentExpenses.Category}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=Name}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>




                            <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Height="auto" HorizontalAlignment="Center">
                                <Button Content="Применить" Background="White" Height="auto" Margin="5" HorizontalAlignment="Center"  Command="{Binding Path=ApplyChangesCommand}" IsCancel="True"/>
                                <Button Content="Отмена" Background="White" Height="auto" Margin="5" HorizontalAlignment="Center"  IsCancel="True"/>
                            </StackPanel>

                        </Grid>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="5">
                            <Button Content="ADD" Command="{Binding Path=AddExpensesCommand}"/>
                            <Button Content="UPD" Command="{Binding Path=UpdateExpensesCommand}"/>
                            <Button Content="DEL" Command="{Binding Path=DeleteExpensesCommand}"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem  Header="План" x:Name="PlanTab"  DataContext="{Binding Path=PlanTabItemVM}">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>

                        </Grid.RowDefinitions>
                        <ListView Grid.Row="1" ItemsSource="{Binding Path = PlanSource, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding Path=SelectedPlan, UpdateSourceTrigger=PropertyChanged}">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="ToolTipService.ToolTip">
                                        <Setter.Value>
                                            <ToolTip Background="SkyBlue">
                                                <TextBlock Text="{Binding Path=Sum}"/>
                                            </ToolTip>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Background" Value="LightBlue"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.View>
                                <GridView x:Name="PlanGridView">
                                    <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding Path=Name}"/>
                                    <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding Path = Date, StringFormat=d}"/>
                                    <GridViewColumn Header="Категория" DisplayMemberBinding="{Binding Path = Category.Category_Name}"/>
                                    <GridViewColumn Header="Сумма" DisplayMemberBinding="{Binding Path=Sum}"/>
                                    <GridViewColumn Header="Важность" DisplayMemberBinding="{Binding Path=Necessity.Name}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="5">
                            <Button Content="ADD" Command="{Binding Path=AddPlanCommand}"/>
                            <Button Content="UPD" Command="{Binding Path=UpdatePlanCommand}"/>
                            <Button Content="DEL" Command="{Binding Path=DeletePlanCommand}"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Бюджет" x:Name="BugetTab" DataContext="{Binding Path=BugetTabItemVM}">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>

                        </Grid.RowDefinitions>
                        <ListView Grid.Row="1" ItemsSource="{Binding Path = BugetSource, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding Path=SelectedBuget, UpdateSourceTrigger=PropertyChanged}">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="ToolTipService.ToolTip">
                                        <Setter.Value>
                                            <ToolTip Background="SkyBlue">
                                                <TextBlock Text="{Binding Path=Sum}"/>
                                            </ToolTip>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Background" Value="LightBlue"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.View>
                                <GridView x:Name="BugetGridView">
                                    <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding Path=Name}"/>
                                    <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding Path = Date, StringFormat=d}"/>
                                    <GridViewColumn Header="Категория" DisplayMemberBinding="{Binding Path = Category.Category_Name}"/>
                                    <GridViewColumn Header="Сумма" DisplayMemberBinding="{Binding Path=Sum}"/>
                                    <GridViewColumn Header="Важность" DisplayMemberBinding="{Binding Path=Necessity.Name}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                     
                    </Grid>
                </TabItem>
                <TabItem Header="Справка" x:Name="HelpTab">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Label TextBlock.TextAlignment="Justify" Grid.Row="0">
                        Данное приложение предназначено для контроля личного бюджета.
                    </Label>
                        <Label TextBlock.TextAlignment="Justify" Grid.Row="1">
                        На вкладке "Доходы" представлена информация о денежных поступлениях. 
                    </Label>
                        <Label TextBlock.TextAlignment="Justify" Grid.Row="2">
                            На вкладке "Расходы" представлена информация о совершенных покупках или оплаченных услугах.
                        </Label>
                        <Label TextBlock.TextAlignment="Justify" Grid.Row="3">
                            На вкладке "План" доходы пользователь может внести информацию о планируемых поступлениях и планируемых приобретениях.
                        </Label>
                        <Label TextBlock.TextAlignment="Justify" Grid.Row="4">
                            На вкладке "Бюджет" представлена статистическая информация.
                        </Label>

                    </Grid>
                </TabItem>
                <TabItem Header="О программе" x:Name="AboutTab">
                    
                </TabItem>

            </TabControl>
        </StackPanel>
    </Grid>
</Window>
